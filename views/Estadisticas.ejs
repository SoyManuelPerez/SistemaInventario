<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/styleRegistro.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon">
  <title>Estad铆stica de Productos</title>
</head>
<body>
<header>
  <%- include('nav'); %>
</header>

<div class="container mt-4">
  <h1 class="text-center mb-4"> Estad铆stica de Productos</h1>

  <% 
  // === Calcular inversi贸n total por tipo ===
  let totalGananciasPorTipo = {};
  Producto.forEach(producto => {
    const ganancia = producto.Cantidad * producto.Precio;
    if (!totalGananciasPorTipo[producto.Tipo]) {
      totalGananciasPorTipo[producto.Tipo] = 0;
    }
    totalGananciasPorTipo[producto.Tipo] += ganancia;
  });

  // === Calcular Top 5 productos m谩s vendidos ===
  const topProductos = [...Producto]
    .sort((a, b) => (b.CantidadVenta || 0) - (a.CantidadVenta || 0))
    .slice(0, 5);
  %>

  <!-- Secci贸n de inversi贸n -->
  <h2 class="mt-4"> Resumen de Inversi贸n por Tipo</h2>
  <ul class="list-group mb-5">
    <% for (const [tipo, totalGanancia] of Object.entries(totalGananciasPorTipo)) { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span><strong><%= tipo %></strong></span>
        <span>$<%= totalGanancia.toLocaleString('es-CO') %></span>
      </li>
    <% } %>
  </ul>

  <!--  Nueva secci贸n: Top 5 productos m谩s vendidos -->
  <h2 class="mt-4"> Top 5 Productos M谩s Vendidos</h2>
  <table class="table table-striped table-hover mt-3">
    <thead class="table-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Producto</th>
        <th scope="col">Cantidad Vendida</th>
      </tr>
    </thead>
    <tbody>
      <% topProductos.forEach((p, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= p.Producto %></td>
          <td><%= p.CantidadVenta || 0 %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</div>
</body>
</html>
