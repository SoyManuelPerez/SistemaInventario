<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Carrito</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <link rel="shortcut icon" href="img/favicon.png" type="image/x-icon">
  <link rel="stylesheet" href="css/style.css">
</head>
<body>
  <div class="flex-wrapper espacio">
    <div class="content">
      <div class="container mt-5">
        <% if (Cart.length === 0) { %>
          <div class="text-center">
            <h1>No has agregado ningún producto</h1><br>
            <a href="/Cliente" class="btn btn-primary">Ver Catálogo</a>
          </div>
        <% } else { %>
          <h1 class="text-center mb-4">¿Listo para cotizar?</h1>
          <% let valor = 0; %>

          <% Cart.forEach(cartItem => { %>
            <div class="card mb-3 shadow-sm">
              <div class="card-body">
                <div class="row align-items-center">

                  <!-- Columna de imagen / carrusel -->
                  <div class="col-md-2">
                    <div id="carousel-<%= cartItem.id %>" class="carousel slide" data-bs-ride="carousel">
                      <div class="carousel-inner">
                        <% cartItem.Imagen.forEach((imagen, index) => { %>
                          <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                            <img src="img/Productos/<%= imagen %>" class="d-block w-100 rounded" alt="Imagen de <%= cartItem.Producto %>">
                          </div>
                        <% }) %>
                      </div>
                      <% if (cartItem.Imagen.length > 1) { %>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carousel-<%= cartItem.id %>" data-bs-slide="prev">
                          <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carousel-<%= cartItem.id %>" data-bs-slide="next">
                          <span class="carousel-control-next-icon"></span>
                        </button>
                      <% } %>
                    </div>
                  </div>

                  <!-- Columna de detalles -->
                  <div class="col-md-10">
                    <div class="row">
                      <div class="col-12 col-md-4">
                        <h5><%= cartItem.Producto %></h5>
                      </div>
                      <div class="col-6 col-md-2 text-center">
                        <strong>Valor unitario</strong>
                        <p>$ <%= cartItem.Precio.toLocaleString('es-CO') %> COP</p>
                      </div>
                      <div class="col-6 col-md-2 text-center">
                        <strong>Cantidad</strong>
                        <p><%= cartItem.Cantidad %></p>
                      </div>
                      <div class="col-12 col-md-4 text-end">
                        <% let valortotal = cartItem.Cantidad * cartItem.Precio; %>
                        <strong>Valor total</strong>
                        <p>$<%= valortotal.toLocaleString('es-CO') %> COP</p>
                        <a href="/eliminarcart/<%= cartItem.id %>" class="text-danger">Remover</a>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
            </div>
            <% valor += valortotal; %>
          <% }) %>

          <% 
            let message = "Hola, me gustaría cotizar los siguientes productos:\n";
            Cart.forEach(cartItem => {
              message += `${cartItem.Producto} - Cantidad: ${cartItem.Cantidad} - Precio unitario: $${cartItem.Precio.toLocaleString('es-CO')} COP\n`;
            });
            message += `Total: $${valor.toLocaleString('es-CO')} COP`;
            let url = `https://wa.me/573136300655?text=${encodeURIComponent(message)}`;
          %>

          <div class="text-end total-price mt-4 fs-5 fw-bold">
            Total: $<%= valor.toLocaleString('es-CO') %> COP
          </div>
          <div class="text-center mt-4">
            <a href="<%= url %>" class="btn btn-success btn-lg" id="cotizarBtn">Cotizar por WhatsApp</a>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
