<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Carrito</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <link rel="shortcut icon" href="img/favicon.png" type="image/x-icon">
  <link rel="stylesheet" href="css/style.css">
  <style>
    .cart-item-card {
      display: flex;
      align-items: center;
      gap: 1rem;
      flex-wrap: wrap;
    }
    .cart-item-img {
      width: 120px;
      height: 120px;
      object-fit: cover;
      border-radius: 10px;
    }
    .cart-item-info {
      flex: 1;
    }
    .cart-item-info h5 {
      margin-bottom: 0.3rem;
    }
    .cart-item-info p {
      margin-bottom: 0;
    }
    .cart-item-actions {
      text-align: end;
      min-width: 150px;
    }
    @media (max-width: 768px) {
      .cart-item-card {
        flex-direction: column;
        text-align: center;
      }
      .cart-item-actions {
        text-align: center;
        margin-top: 1rem;
      }
    }

    /* üé® Bot√≥n "Cat√°logo" personalizado */
    .catalogo-btn {
      display: inline-block;
      background: linear-gradient(90deg, #0d6efd, #4e9af1);
      color: white !important;
      border: none;
      border-radius: 30px;
      padding: 0.7rem 1.5rem;
      font-weight: 600;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
      transition: all 0.3s ease;
      text-decoration: none;
    }
    .catalogo-btn:hover {
      transform: translateY(-2px);
      background: linear-gradient(90deg, #0b5ed7, #3c8be0);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    }
  </style>
</head>
<body>
  <div class="flex-wrapper espacio">
    <div class="content">
      <div class="container mt-5">

        <% if (!Cart || Cart.length === 0) { %>
          <div class="text-center">
            <h1>No has agregado ning√∫n producto</h1><br>
            <a href="/Cliente" class="btn btn-primary">Ver Cat√°logo</a>
          </div>
        <% } else { %>

          <!-- üåü Bot√≥n de cat√°logo arriba -->
          <div class="text-start mb-4">
            <a href="/Cliente" class="catalogo-btn">
              <i class="bi bi-box-seam"></i> üõçÔ∏è Ver Cat√°logo
            </a>
          </div>

          <h1 class="text-center mb-4">¬øListo para cotizar?</h1>
          <% let valor = 0; %>

          <% Cart.forEach(cartItem => { %>
            <div class="card mb-3 shadow-sm p-3">
              <div class="cart-item-card">

                <!-- Imagen -->
                <img src="img/Productos/<%= cartItem.Imagen[0] %>" 
                     alt="Imagen de <%= cartItem.Producto %>"
                     class="cart-item-img">

                <!-- Informaci√≥n del producto -->
                <div class="cart-item-info">
                  <h5><%= cartItem.Producto %></h5>
                  <p><strong>Valor unitario:</strong> $<%= cartItem.Precio.toLocaleString('es-CO') %> COP</p>
                  <p><strong>Cantidad:</strong> <%= cartItem.Cantidad %></p>
                  <p><strong>Talla:</strong> <%= cartItem.Talla %></p>
                </div>

                <!-- Total y acci√≥n -->
                <div class="cart-item-actions">
                  <% let valortotal = cartItem.Cantidad * cartItem.Precio; %>
                  <p><strong>Total:</strong><br> $<%= valortotal.toLocaleString('es-CO') %> COP</p>
                  <a href="/eliminarcart/<%= cartItem.id %>" class="text-danger small d-block mt-2">Remover</a>
                </div>

              </div>
            </div>
            <% valor += valortotal; %>
          <% }) %>

          <% 
            let message = "Hola, me gustar√≠a cotizar los siguientes productos:\n";
            Cart.forEach(cartItem => {
              message += `${cartItem.Producto} - Cantidad: ${cartItem.Cantidad} - Talla:${cartItem.Talla}- Precio unitario: $${cartItem.Precio.toLocaleString('es-CO')} COP\n`;
            });
            message += `Total: $${valor.toLocaleString('es-CO')} COP`;
            let url = `https://wa.me/573136300655?text=${encodeURIComponent(message)}`;
          %>

          <div class="text-end total-price mt-4 fs-5 fw-bold">
            Total: $<%= valor.toLocaleString('es-CO') %> COP
          </div>

          <div class="text-center mt-4">
            <a href="<%= url %>" class="btn btn-success btn-lg" id="cotizarBtn">Cotizar por WhatsApp</a>
          </div>

        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
