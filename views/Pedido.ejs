<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="css/styleRegistro.css">
  <link rel="stylesheet" href="css/style.css">
  <link rel="shortcut icon" href="img/favicon.png" type="image/x-icon">
  <title>Pedido</title>
</head>
<body>
<header>
  <%- include('nav'); %>
</header>
<div class="container">
  <div class="container espacio">
    <div class="login-page">
      <h1>Registrar Pedido</h1>
      <br>
      <form action="/Factura" method="POST" class="form">
        <!-- Campos obligatorios -->
        <input type="text" name="Nombre" id="Nombre" placeholder="Nombre del cliente" required>
        <input type="tel" name="Telefono" id="Telefono" placeholder="Teléfono del cliente" required>
        <input type="text" name="Direccion" id="Direccion" placeholder="Dirección del cliente" required>
        <input type="text" name="Ciudad" id="Ciudad" placeholder="Ciudad del cliente" required>
        <input type="text" name="Departamento" id="Departamento" placeholder="Departamento del cliente" required>
        
        <!-- Método de pago con opciones -->
        <label for="MetodoPago">Método de pago:</label>
        <select name="MetodoPago" id="MetodoPago" required>
          <option value="">Seleccione un método de pago</option>
          <option value="Contra entrega">Contra entrega</option>
          <option value="Transferencia">Transferencia</option>
        </select>

        <!-- Campos opcionales -->
        <input type="text" name="Documento" id="Documento" placeholder="Documento del cliente">
        <input type="number" name="Valor" id="Valor" placeholder="Valor por correa">
        <input type="number" name="Descuento" id="Descuento" placeholder="Descuento (opcional)">

        <button type="submit" class="btn btn-primary">Registrar</button>
        <p class="error escondido">Error en pedido</p>
      </form>
    </div>
  </div>

  <table id="Pedidos" class="tabla table table-dark">
    <thead>
      <tr>
        <th scope="col">Imagen</th>
        <th scope="col">Producto</th>
        <th scope="col">Cantidad</th>
        <th scope="col">Talla</th>
        <th scope="col">Precio</th>
        <th scope="col">Opciones</th>
      </tr>
    </thead>
    <tbody>
      <% Pedido.forEach( (Pedido) => { %>
        <tr>
          <td><img src="img/Productos/<%= Pedido.Imagen %>" width="80px"></td>
          <td><%= Pedido.Producto %></td>
          <td><%= Pedido.Cantidad %></td>
          <td><%= Pedido.Talla %></td>
          <td><%= Pedido.Precio.toLocaleString('es-CO') %></td>
          <td>
            <a href="/EliminarPedido/<%= Pedido.id %>" class="btn btn-outline-danger bi bi-trash"></a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>
