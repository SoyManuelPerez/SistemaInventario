<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inventario</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <link rel="shortcut icon" href="img/favicon.png" type="image/x-icon">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/plug-ins/1.13.5/i18n/es-ES.json"></script>
  <link rel="stylesheet" href="css/inventario.css">
</head>
<body>
    <header>
        <%- include('nav'); %>
    </header>
    <div class="container espacio">
      <div class="login-page espacio">
        <h1>Crear Producto</h1>
        <br>
        <form action="/CrearProducto" method="POST" enctype="multipart/form-data" class="form">
          <input type="text" name="Producto" id="Producto" placeholder="Nombre del producto" required>
          
          <select name="Tipo" id="Tipo" class="form-select form-select-sm" aria-label=".form-select-sm example" required onchange="showFields()">
            <option value="">Categoria</option>
            <option value="Correa">Correa</option>
            <option value="Bolso">Bolso</option>
          </select>
          
          <input type="number" name="Precio" id="Precio" placeholder="Precio del producto" required>
          
          <div id="correas-section">
            <label for="">Cantidad por talla</label>
            <div class="tallas-container">
              <div class="talla-item">
                <p>30</p>
                <input type="number" name="Cantidad30" id="Cantidad30" min="0" value="0">
              </div>
              <div class="talla-item">
                <p>32</p>
                <input type="number" name="Cantidad32" id="Cantidad32" min="0" value="0">
              </div>
              <div class="talla-item">
                <p>34</p>
                <input type="number" name="Cantidad34" id="Cantidad34" min="0" value="0">
              </div>
              <div class="talla-item">
                <p>36</p>
                <input type="number" name="Cantidad36" id="Cantidad36" min="0" value="0">
              </div>
              <div class="talla-item">
                <p>38</p>
                <input type="number" name="Cantidad38" id="Cantidad38" min="0" value="0">
              </div>
              <div class="talla-item">
                <p>40</p>
                <input type="number" name="Cantidad40" id="Cantidad40" min="0" value="0">
              </div>
              <div class="talla-item">
                <p>42</p>
                <input type="number" name="Cantidad42" id="Cantidad42" min="0" value="0">
              </div>
              <div class="talla-item">
                <p>44</p>
                <input type="number" name="Cantidad44" id="Cantidad44" min="0" value="0">
              </div>
              <div class="talla-item">
                <p>46</p>
                <input type="number" name="Cantidad46" id="Cantidad46" min="0" value="0">
              </div>
            </div>
          </div>
          
          <div id="bolso-section">
            <label for="Cantidad">Cantidad</label>
            <input type="number" name="CantidadBolso" id="CantidadBolso" min="0" value="0">
          </div>
          
          <input type="file" name="Imagen" id="Imagen" accept="image/*" required>
          <button type="submit">Crear</button>
        </form>
      </div>
    </div>
    <div class="container">
      <h1>Inventario de Correas</h1>
      <table id="inventarioCorreas" class="table table-bordered text-center" style="width: 100%;">
        <thead>
          <tr>
            <th scope="col">Imagen</th>
            <th scope="col">Nombre</th>
            <th scope="col">30</th>
            <th scope="col">32</th>
            <th scope="col">34</th>
            <th scope="col">36</th>
            <th scope="col">38</th>
            <th scope="col">40</th>
            <th scope="col">42</th>
            <th scope="col">44</th>
            <th scope="col">46</th>
            <th scope="col">Cantidad Total</th>
            <th scope="col">Opciones</th>
          </tr>
        </thead>
        <tbody>
          <% Productos.filter(producto => producto.Tipo === 'Correa').forEach(producto => { %>
            <tr>
              <td><img src="../img/Productos/<%= producto.Imagen %>" width="80px" alt=""></td>
              <td><%= producto.Producto %></td>
              <td><%= producto.T30 %></td>
              <td><%= producto.T32 %></td>
              <td><%= producto.T34 %></td>
              <td><%= producto.T36 %></td>
              <td><%= producto.T38 %></td>
              <td><%= producto.T40 %></td>
              <td><%= producto.T42 %></td>
              <td><%= producto.T44 %></td>
              <td><%= producto.T46 %></td>
              <td><%= producto.Cantidad %></td>
              <td>
                <a href="/EliminarProducto/<%= producto.id %>" class="btn btn-outline-danger bi bi-trash3"></a>
                <button class="btnModal btn btn-outline-primary bi bi-pencil-square"></button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    
    <div class="container">
      <h1>Inventario de Bolsos</h1>
      <table id="inventarioBolsos" class="table table-bordered text-center" style="width: 100%;">
        <thead>
          <tr>
            <th scope="col">Imagen</th>
            <th scope="col">Nombre</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Opciones</th>
          </tr>
        </thead>
        <tbody>
          <% Productos.filter(producto => producto.Tipo === 'Bolso').forEach(producto => { %>
            <tr>
              <td><img src="../img/Productos/<%= producto.Imagen %>" width="80px" alt=""></td>
              <td><%= producto.Producto %></td>
              <td><%= producto.Cantidad %></td>
              <td>
                <a href="/EliminarProducto/<%= producto.id %>" class="btn btn-outline-danger bi bi-trash3"></a>
                <button class="btnModal btn btn-outline-primary bi bi-pencil-square"></button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    
    <br>
    <div id="modalAactualizar" class="modal fade" tabindex="-1" aria-labelledby="modalAactualizar" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header bg-primary text-white">
            <h5 class="modal-title" id="exampleModalLabel">Actualizar Producto</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form action="/EditarProducto" method="POST" class="form">
              <input type="text" name="MProducto" id="MProducto" placeholder="Nombre del producto" >
              <label for="">Cantidad por talla</label>
              <div class="tallas-container">
                <div class="talla-item">
                  <p>30</p>
                  <input type="number" name="MCantidad30" id="MCantidad30" min="0">
                </div>
                <div class="talla-item">
                  <p>32</p>
                  <input type="number" name="MCantidad32" id="MCantidad32" min="0">
                </div>
                <div class="talla-item">
                  <p>34</p>
                  <input type="number" name="MCantidad34" id="MCantidad34" min="0">
                </div>
                <div class="talla-item">
                  <p>36</p>
                  <input type="number" name="MCantidad36" id="MCantidad36" min="0">
                </div>
                <div class="talla-item">
                  <p>38</p>
                  <input type="number" name="MCantidad38" id="MCantidad38" min="0">
                </div>
                <div class="talla-item">
                  <p>40</p>
                  <input type="number" name="MCantidad40" id="MCantidad40" min="0">
                </div>
                <div class="talla-item">
                  <p>42</p>
                  <input type="number" name="MCantidad42" id="MCantidad42" min="0">
                </div>
                <div class="talla-item">
                  <p>44</p>
                  <input type="number" name="MCantidad44" id="MCantidad44" min="0">
                </div>
                <div class="talla-item">
                  <p>46</p>
                  <input type="number" name="MCantidad46" id="MCantidad46" min="0">
                </div>
              </div>
              <button type="submit">Actualizar</button>
            </form>
          </div>
        </div>
      </div>
    </div>
</body>
<script>
  $(document).ready(function() {
    $('#inventarioCorreas').DataTable({
      "language": {
        "url": "//cdn.datatables.net/plug-ins/1.13.5/i18n/es-ES.json"
      },
      "lengthChange": false,  // Desactiva el menú para cambiar el número de registros mostrados
      "pageLength": 5         // Máximo de 5 filas por página
    });

    $('#inventarioBolsos').DataTable({
      "language": {
        "url": "//cdn.datatables.net/plug-ins/1.13.5/i18n/es-ES.json"
      },
      "lengthChange": false,  // Desactiva el menú para cambiar el número de registros mostrados
      "pageLength": 5         // Máximo de 5 filas por página
    });
  });
</script>

<script src="js/Modal.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>