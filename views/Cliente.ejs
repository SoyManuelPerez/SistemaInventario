<body>

<!-- Bienvenida -->
<section class="text-center py-4">
  <h2 class="fw-bold">Bienvenido a <span class="text-primary">Eusse Cueros</span></h2>
</section>

<!-- Bot칩n Pedido -->
<div class="container mb-3 d-flex justify-content-end">
  <a href="/Pedido" class="text-decoration-none">
    <button class="btn btn-primary shadow-sm">
      <i class="fas fa-truck me-2"></i> Pedido
    </button>
  </a>
</div>

<main class="container">

  <!-- Filtro -->
  <div class="row my-4">
    <div class="col-md-4">
      <select id="categoriaSelect" class="form-select shadow-sm">
        <option value="todos" selected>游닍 Mostrar todos</option>
        <option value="rinoneras">游 Ri침oneras</option>
        <option value="bolsos">游녶 Bolsos</option>
        <option value="correas">游븴 Correas</option>
        <option value="billeteras">游눱 Billeteras</option>
        <option value="accesorios">游눐 Accesorios</option>
        <option value="ropa">游녯 Camisas y Chaquetas</option>
      </select>
    </div>
  </div>

  <!-- ================= RI칌ONERAS ================= -->
  <section class="categoria-seccion mb-5" id="rinonerasSection">
    <h3 class="text-primary border-bottom pb-2">Ri침oneras</h3>
    <div class="row">
      <% Producto.filter(p => p.Tipo === 'Ri침onera' && p.Cantidad > 0).forEach((Producto) => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
          <div class="card h-100 shadow-sm border-0">
            <img src="img/Productos/<%= Producto.Imagenes[0] %>" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title text-truncate"><%= Producto.Producto %></h5>
              <p class="fw-bold text-success">$<%= Producto.Precio.toLocaleString('es-CO') %></p>
              <form action="/Agregarcart/<%= Producto.id %>" method="POST">
                <input type="number" name="cantidad" class="form-control mb-2" min="1" value="1">
                <input type="hidden" name="tipoProducto" value="<%= Producto.Tipo %>">
                <button class="btn btn-primary w-100">Agregar</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

