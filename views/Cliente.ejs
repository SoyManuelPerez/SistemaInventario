  </section>

  <!-- ================= ROPA ================= -->
  <section class="categoria-seccion mb-5" id="ropaSection">
    <h3 class="text-primary border-bottom pb-2">Camisas y Chaquetas</h3>
    <div class="row">
      <% Producto.filter(p => p.Tipo === 'Camisas y chaquetas' && p.Cantidad > 0).forEach((Producto) => { %>
