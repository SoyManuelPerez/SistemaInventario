<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cat√°logo</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="shortcut icon" href="img/favicon.png" type="image/x-icon">
  <link rel="stylesheet" href="css/style.css">

  <style>
    /* ==== BOT√ìN FLOTANTE WHATSAPP ==== */
    .whatsapp-float {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background-color: #25d366;
      color: white;
      border-radius: 50%;
      padding: 15px;
      font-size: 28px;
      z-index: 1000;
      transition: transform 0.2s ease;
    }
    .whatsapp-float:hover {
      transform: scale(1.1);
      background-color: #20b857;
      color: white;
    }

    /* ==== ANIMACI√ìN SUAVE AL MOSTRAR/OCULTAR ==== */
    .d-none {
      display: none !important;
    }
  </style>
</head>
<body>
  <!-- Bienvenida -->
  <section class="text-center py-4">
    <h2 class="fw-bold">Bienvenido a <span class="text-primary">Eusse Cueros</span></h2>
  </section>

  <!-- Bot√≥n Pedido -->
  <div class="container mb-3 d-flex justify-content-end">
    <a href="/Pedido" class="text-decoration-none">
      <button class="btn btn-primary d-flex align-items-center shadow-sm">
        <i class="fas fa-truck"></i>
        <span class="ms-2">Pedido</span>
      </button>
    </a>
  </div>

  <!-- Contenido -->
  <main class="container">

    <!-- Buscador y filtro -->
    <div class="row my-4">
      <div class="col-md-8 mb-2">
        <input type="text" id="searchInput" class="form-control shadow-sm" placeholder="üîç Buscar producto...">
      </div>
      <div class="col-md-4">
        <select id="categoriaSelect" class="form-select shadow-sm">
          <option value="todos" selected>üì¶ Mostrar todos</option>
          <option value="correas">üßç Correas</option>
          <option value="bolsos">üëú Bolsos</option>
          <option value="accesorios">üíç Accesorios</option>
        </select>
      </div>
    </div>

    <!-- ==================== SECCI√ìN CORREAS ==================== -->
    <section class="mb-5 categoria-seccion" id="correasSection">
      <h3 class="text-primary border-bottom pb-2">Correas</h3>
      <div class="row" id="correasContainer">
        <% Producto.filter(p => p.Tipo === 'Correa' && p.Cantidad > 0).forEach((Producto) => { %>
          <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
            <div class="card h-100 shadow-sm border-0">

              <!-- Carrusel -->
              <div id="carousel-<%= Producto.id %>" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <% Producto.Imagenes.forEach((imagen, index) => { %>
                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                      <img src="img/Productos/<%= imagen %>" class="d-block w-100 rounded-top" alt="Imagen de <%= Producto.Producto %>">
                    </div>
                  <% }) %>
                </div>
              </div>

              <!-- Info -->
              <div class="card-body">
                <h5 class="card-title text-truncate"><%= Producto.Producto %></h5>
                <p class="card-text text-success fw-bold">Precio: $<%= Producto.Precio.toLocaleString('es-CO') %></p>

                <!-- Tallas din√°micas SOLO si hay stock -->
                <div class="tallas mb-3">
                  <% let tieneTallas = false; %>
                  <% for (let talla = 30; talla <= 46; talla += 2) { if (Producto['T' + talla] > 0) tieneTallas = true; } %>
                  <% if (tieneTallas) { %>
                    <label class="form-label fw-bold">Selecciona una talla</label>
                    <div class="d-flex flex-wrap gap-2">
                      <% for (let talla = 30; talla <= 46; talla += 2) { %>
                        <% if (Producto['T' + talla] > 0) { %>
                          <label class="btn btn-outline-primary flex-fill">
                            <input type="radio" 
                                  name="tallaSeleccionada-<%= Producto.id %>" 
                                  value="T<%= talla %>" 
                                  class="d-none">
                            T<%= talla %> (<%= Producto['T' + talla] %>)
                          </label>
                        <% } %>
                      <% } %>
                    </div>
                  <% } %>
                </div>

                <!-- Formulario -->
                <form id="agregarCartForm-<%= Producto.id %>" action="/Agregarcart/<%= Producto.id %>" method="POST">
                  <div class="mb-3">
                    <label for="cantidad-<%= Producto.id %>" class="form-label">Cantidad</label>
                    <input type="number" name="cantidad" id="cantidad-<%= Producto.id %>" class="form-control" min="1" value="1">
                  </div>
                  <input type="hidden" name="tipoProducto" value="<%= Producto.Tipo %>">
                  <button type="submit" class="btn btn-primary w-100 shadow-sm">Agregar al pedido</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- ==================== SECCI√ìN BOLSOS ==================== -->
    <section class="mb-5 categoria-seccion" id="bolsosSection">
      <h3 class="text-primary
