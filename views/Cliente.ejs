<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cat√°logo</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="shortcut icon" href="img/favicon.png" type="image/x-icon">
  <link rel="stylesheet" href="css/style.css">

  <style>
    .whatsapp-float {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background-color: #25d366;
      color: white;
      border-radius: 50%;
      padding: 15px;
      font-size: 28px;
      z-index: 1000;
      transition: transform 0.2s ease;
    }

    .whatsapp-float:hover {
      transform: scale(1.1);
      background-color: #20b857;
      color: white;
    }

    .d-none {
      display: none !important;
    }
  </style>
</head>

<body>
  <!-- Bienvenida -->
  <section class="text-center py-4">
    <h2 class="fw-bold">Bienvenido a <span class="text-primary">Eusse Cueros</span></h2>
  </section>

  <!-- Bot√≥n Pedido -->
  <div class="container flex-wrapper">
    <div class="content">
      <div class="cart">
        <a class="nav-link active" aria-current="page" href="/cart">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-cart4"
            viewBox="0 0 16 16">
            <path
              d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
          </svg>
          <% let cantida = 0 %>
          <% Cart.forEach((Cart) => { cantida += 1 }) %>
          <div class="notification" id="cart-count"><%= cantida %></div>
        </a>
      </div>
    </div>
  </div>

  <!-- Contenido -->
  <main class="container">
    <div class="row my-4">
      <div class="col-md-4">
        <select id="categoriaSelect" class="form-select shadow-sm">
          <option value="todos" selected>üì¶ Mostrar todos</option>
          <option value="correas">üßç Correas</option>
          <option value="bolsos">üëú Bolsos</option>
          <option value="accesorios">üíç Accesorios</option>
        </select>
      </div>
    </div>

    <!-- SECCI√ìN CORREAS -->
    <section class="mb-5 categoria-seccion" id="correasSection">
      <h3 class="text-primary border-bottom pb-2">Correas</h3>
      <div class="row" id="correasContainer">
        <% Producto.filter(p => p.Tipo === 'Correa' && p.Cantidad > 0).forEach((Producto) => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
          <div class="card h-100 shadow-sm border-0">
            <div id="carousel-<%= Producto.id %>" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <% Producto.Imagenes.forEach((imagen, index) => { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                  <img src="img/Productos/<%= imagen %>" class="d-block w-100 rounded-top"
                    alt="Imagen de <%= Producto.Producto %>">
                </div>
                <% }) %>
              </div>
            </div>

            <div class="card-body">
              <h5 class="card-title text-truncate"><%= Producto.Producto %></h5>
              <p class="card-text text-success fw-bold">Precio: $<%= Producto.Precio.toLocaleString('es-CO') %></p>

              <!-- Tallas -->
              <div class="tallas mb-3">
                <% let tieneTallas = false; %>
                <% for (let talla = 30; talla <= 46; talla += 2) { if (Producto['T' + talla] > 0) tieneTallas = true; } %>
                <% if (tieneTallas) { %>
                <label class="form-label fw-bold">Selecciona una talla</label>
                <div class="d-flex flex-wrap gap-2" id="tallasContainer-<%= Producto.id %>">
                  <% for (let talla = 30; talla <= 46; talla += 2) { if (Producto['T' + talla] > 0) { %>
                  <input type="radio" name="tallaSeleccionada-<%= Producto.id %>"
                    data-product-id="<%= Producto.id %>"
                    id="talla-<%= Producto.id %>-<%= talla %>"
                    value="T<%= talla %>" class="btn-check">
                  <label for="talla-<%= Producto.id %>-<%= talla %>" class="btn btn-outline-primary">
                    T<%= talla %> (<%= Producto['T' + talla] %>)
                  </label>
                  <% } } %>
                </div>
                <% } %>
              </div>

              <!-- Formulario -->
              <form id="agregarCartForm-<%= Producto.id %>" action="/AgregarCartCliente/<%= Producto.id %>" method="POST">
                <div class="mb-3">
                  <label for="cantidad-<%= Producto.id %>" class="form-label">Cantidad</label>
                  <input type="number" name="cantidad" id="cantidad-<%= Producto.id %>" class="form-control" min="1"
                    value="1">
                </div>
                <input type="hidden" name="tipoProducto" value="<%= Producto.Tipo %>">
                <button type="submit" class="btn btn-primary w-100 shadow-sm">Agregar al pedido</button>
                <div id="error-message-<%= Producto.id %>" class="text-danger mt-2" style="display:none;"></div>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </section>

    <!-- SECCI√ìN BOLSOS -->
    <section class="mb-5 categoria-seccion" id="bolsosSection">
      <h3 class="text-primary border-bottom pb-2">Bolsos</h3>
      <div class="row" id="bolsosContainer">
        <% Producto.filter(p => p.Tipo === 'Bolso' && p.Cantidad > 0).forEach((Producto) => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
          <div class="card h-100 shadow-sm border-0">
            <img src="img/Productos/<%= Producto.Imagenes[0] %>" class="card-img-top rounded-top"
              alt="Imagen de <%= Producto.Producto %>">
            <div class="card-body">
              <h5 class="card-title text-truncate"><%= Producto.Producto %></h5>
              <p class="card-text text-success fw-bold">Precio: $<%= Producto.Precio.toLocaleString('es-CO') %></p>
              <form id="agregarCartForm-<%= Producto.id %>" action="/AgregarCartCliente/<%= Producto.id %>" method="POST">
                <div class="mb-3">
                  <label for="cantidad-<%= Producto.id %>" class="form-label">Cantidad</label>
                  <input type="number" name="cantidad" id="cantidad-<%= Producto.id %>" class="form-control" min="1"
                    value="1">
                </div>
                <input type="hidden" name="tipoProducto" value="<%= Producto.Tipo %>">
                <button type="submit" class="btn btn-primary w-100 shadow-sm">Agregar al pedido</button>
                <div id="error-message-<%= Producto.id %>" class="text-danger mt-2" style="display:none;"></div>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </section>

    <!-- SECCI√ìN ACCESORIOS -->
    <section class="mb-5 categoria-seccion" id="accesoriosSection">
      <h3 class="text-primary border-bottom pb-2">Accesorios</h3>
      <div class="row" id="accesoriosContainer">
        <% Producto.filter(p => p.Tipo === 'Accesorios' && p.Cantidad > 0).forEach((Producto) => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
          <div class="card h-100 shadow-sm border-0">
            <img src="img/Productos/<%= Producto.Imagenes[0] %>" class="card-img-top rounded-top"
              alt="Imagen de <%= Producto.Producto %>">
            <div class="card-body">
              <h5 class="card-title text-truncate"><%= Producto.Producto %></h5>
              <p class="card-text text-success fw-bold">Precio: $<%= Producto.Precio.toLocaleString('es-CO') %></p>
              <form id="agregarCartForm-<%= Producto.id %>" action="/AgregarCartCliente/<%= Producto.id %>" method="POST">
                <div class="mb-3">
                  <label for="cantidad-<%= Producto.id %>" class="form-label">Cantidad</label>
                  <input type="number" name="cantidad" id="cantidad-<%= Producto.id %>" class="form-control" min="1"
                    value="1">
                </div>
                <input type="hidden" name="tipoProducto" value="<%= Producto.Tipo %>">
                <button type="submit" class="btn btn-primary w-100 shadow-sm">Agregar al pedido</button>
                <div id="error-message-<%= Producto.id %>" class="text-danger mt-2" style="display:none;"></div>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </section>
  </main>

    <!-- BOT√ìN WHATSAPP -->
  <a href="https://wa.me/573136300655" target="_blank" class="whatsapp-float">
    <i class="fab fa-whatsapp"></i>
  </a>

  <!-- Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- === FILTRO DE CATEGOR√çAS === -->
  <script>
    document.getElementById('categoriaSelect').addEventListener('change', function () {
      const categoria = this.value;
      const secciones = document.querySelectorAll('.categoria-seccion');
      secciones.forEach(sec => sec.classList.add('d-none'));
      if (categoria === 'todos') {
        secciones.forEach(sec => sec.classList.remove('d-none'));
      } else {
        document.getElementById(categoria + 'Section').classList.remove('d-none');
      }
    });
  </script>

  <!-- === CAMBIO DE TALLA Y ENV√çO DEL FORMULARIO === -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      console.log("‚úÖ Script de tallas cargado correctamente");

      // Detectar selecci√≥n de talla
      document.querySelectorAll('input[type="radio"][name^="tallaSeleccionada-"]').forEach((radio) => {
        radio.addEventListener('change', function () {
          const productId = this.name.split('-')[1];
          const form = document.querySelector(`#agregarCartForm-${productId}`);

          // Buscar o crear input oculto
          let tallaInput = form.querySelector('input[name="tallaSeleccionada"]');
          if (!tallaInput) {
            tallaInput = document.createElement('input');
            tallaInput.type = 'hidden';
            tallaInput.name = 'tallaSeleccionada';
            form.appendChild(tallaInput);
          }

          tallaInput.value = this.value;
          console.log(`üëï Talla seleccionada (${productId}): ${this.value}`);
        });
      });

      // Env√≠o de formularios
      document.querySelectorAll('[id^="agregarCartForm-"]').forEach((form) => {
        const id = form.id.split('-')[1];
        const errorDiv = document.getElementById(`error-message-${id}`);
        const cantidadInput = document.getElementById(`cantidad-${id}`);
        const tallaContainer = document.querySelector(`#tallasContainer-${id}`);

        form.addEventListener('submit', async function (event) {
          event.preventDefault();
          errorDiv.style.display = 'none';
          errorDiv.textContent = '';

          const tallaInput = form.querySelector('input[name="tallaSeleccionada"]');
          const hasTallas = tallaContainer && tallaContainer.querySelectorAll('input[type="radio"]').length > 0;

          // Validar talla
          if (hasTallas && (!tallaInput || !tallaInput.value)) {
            errorDiv.style.display = 'block';
            errorDiv.textContent = '‚ö†Ô∏è Por favor selecciona una talla.';
            return;
          }

          // Validar cantidad
          if (!cantidadInput.value || cantidadInput.value <= 0) {
            errorDiv.style.display = 'block';
            errorDiv.textContent = '‚ö†Ô∏è Ingresa una cantidad v√°lida.';
            return;
          }

          // Armar JSON
          const formData = new FormData(form);
          const jsonData = {};
          formData.forEach((v, k) => (jsonData[k] = v));
          console.log('üì¶ Enviando datos al servidor:', jsonData);

          // Deshabilitar bot√≥n
          const submitBtn = form.querySelector('button[type="submit"]');
          submitBtn.disabled = true;
          const originalText = submitBtn.textContent;
          submitBtn.textContent = 'Agregando...';

          try {
            const res = await fetch(form.action, {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(jsonData),
            });

            const resJson = await res.json();

            if (!res.ok) {
              errorDiv.style.display = 'block';
              errorDiv.textContent = resJson.message || '‚ùå Error al agregar el producto.';
            } else {
              console.log('üü¢ Producto agregado correctamente:', resJson);
              // Redirigir al carrito
              window.location.href = '/cart';
            }
          } catch (err) {
            console.error('‚ùå Error de red:', err);
            errorDiv.style.display = 'block';
            errorDiv.textContent = 'Error de conexi√≥n o servidor.';
          } finally {
            submitBtn.disabled = false;
            submitBtn.textContent = originalText;
          }
        });
      });
    });
  </script>
</body>
</html>
