<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Catálogo</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="shortcut icon" href="img/favicon.png" type="image/x-icon">
  <link rel="stylesheet" href="css/style.css">
</head>
<body>
  <!-- Bienvenida -->
  <section class="text-center py-4">
    <h2 class="fw-bold">Bienvenido a <span class="text-primary">Eusse Cueros</span></h2>
  </section>

  <!-- Botón Pedido -->
  <div class="container mb-3 d-flex justify-content-end">
    <a href="/Pedido" class="text-decoration-none">
      <button class="btn btn-primary d-flex align-items-center shadow-sm">
        <i class="fas fa-truck"></i>
        <span class="ms-2">Pedido</span>
      </button>
    </a>
  </div>

  <!-- Contenido -->
  <main class="container">

    <!-- Buscador -->
    <div class="row my-4">
      <div class="col">
        <input type="text" id="searchInput" class="form-control shadow-sm" placeholder="🔍 Buscar producto...">
      </div>
    </div>

    <!-- ==================== SECCIÓN CORREAS ==================== -->
    <section class="mb-5">
      <h3 class="text-primary border-bottom pb-2">Correas</h3>
      <div class="row" id="correasContainer">
        <% Producto.filter(p => p.Tipo === 'Correa' && p.Cantidad > 0).forEach((Producto) => { %>
          <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
            <div class="card h-100 shadow-sm border-0">

              <!-- Carrusel -->
              <div id="carousel-<%= Producto.id %>" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <% Producto.Imagenes.forEach((imagen, index) => { %>
                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                      <img src="img/Productos/<%= imagen %>" class="d-block w-100 rounded-top" alt="Imagen de <%= Producto.Producto %>">
                    </div>
                  <% }) %>
                </div>
              </div>

              <!-- Info -->
              <div class="card-body">
                <h5 class="card-title text-truncate"><%= Producto.Producto %></h5>
                <p class="card-text text-success fw-bold">Precio: $<%= Producto.Precio.toLocaleString('es-CO') %></p>

                <!-- Tallas dinámicas SOLO si hay stock -->
                <div class="tallas mb-3">
                  <label class="form-label fw-bold">Selecciona una talla</label>
                  <div class="d-flex flex-wrap gap-2">
                    <% for (let talla = 30; talla <= 46; talla += 2) { %>
                      <% if (Producto['T' + talla] > 0) { %>
                        <label class="btn btn-outline-primary flex-fill">
                          <input type="radio" 
                                 name="tallaSeleccionada-<%= Producto.id %>" 
                                 value="T<%= talla %>" 
                                 class="d-none">
                          T<%= talla %> (<%= Producto['T' + talla] %>)
                        </label>
                      <% } %>
                    <% } %>
                  </div>
                </div>

                <!-- Formulario -->
                <form id="agregarCartForm-<%= Producto.id %>" action="/Agregarcart/<%= Producto.id %>" method="POST">
                  <div class="mb-3">
                    <label for="cantidad-<%= Producto.id %>" class="form-label">Cantidad</label>
                    <input type="number" name="cantidad" id="cantidad-<%= Producto.id %>" class="form-control" min="1" value="1">
                  </div>
                  <input type="hidden" name="tipoProducto" value="<%= Producto.Tipo %>">
                  <button type="submit" class="btn btn-primary w-100 shadow-sm">Agregar al pedido</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- ==================== SECCIÓN BOLSOS ==================== -->
    <section class="mb-5">
      <h3 class="text-primary border-bottom pb-2">Bolsos</h3>
      <div class="row" id="bolsosContainer">
        <% Producto.filter(p => p.Tipo === 'Bolso' && p.Cantidad > 0).forEach((Producto) => { %>
          <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
            <div class="card h-100 shadow-sm border-0">

              <!-- Imagen -->
              <img src="img/Productos/<%= Producto.Imagenes[0] %>" class="card-img-top rounded-top" alt="Imagen de <%= Producto.Producto %>">

              <!-- Info -->
              <div class="card-body">
                <h5 class="card-title text-truncate"><%= Producto.Producto %></h5>
                <p class="card-text text-success fw-bold">Precio: $<%= Producto.Precio.toLocaleString('es-CO') %></p>

                <!-- Formulario -->
                <form id="agregarCartForm-<%= Producto.id %>" action="/Agregarcart/<%= Producto.id %>" method="POST">
                  <div class="mb-3">
                    <label for="cantidad-<%= Producto.id %>" class="form-label">Cantidad</label>
                    <input type="number" name="cantidad" id="cantidad-<%= Producto.id %>" class="form-control" min="1" value="1">
                  </div>
                  <input type="hidden" name="tipoProducto" value="<%= Producto.Tipo %>">
                  <button type="submit" class="btn btn-primary w-100 shadow-sm">Agregar al pedido</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- ==================== SECCIÓN ACCESORIOS ==================== -->
    <section class="mb-5">
      <h3 class="text-primary border-bottom pb-2">Accesorios</h3>
      <div class="row" id="accesoriosContainer">
        <% Producto.filter(p => p.Tipo === 'Accesorio' && p.Cantidad > 0).forEach((Producto) => { %>
          <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
            <div class="card h-100 shadow-sm border-0">

              <!-- Imagen -->
              <img src="img/Productos/<%= Producto.Imagenes[0] %>" class="card-img-top rounded-top" alt="Imagen de <%= Producto.Producto %>">

              <!-- Info -->
              <div class="card-body">
                <h5 class="card-title text-truncate"><%= Producto.Producto %></h5>
                <p class="card-text text-success fw-bold">Precio: $<%= Producto.Precio.toLocaleString('es-CO') %></p>

                <!-- Formulario -->
                <form id="agregarCartForm-<%= Producto.id %>" action="/Agregarcart/<%= Producto.id %>" method="POST">
                  <div class="mb-3">
                    <label for="cantidad-<%= Producto.id %>" class="form-label">Cantidad</label>
                    <input type="number" name="cantidad" id="cantidad-<%= Producto.id %>" class="form-control" min="1" value="1">
                  </div>
                  <input type="hidden" name="tipoProducto" value="<%= Producto.Tipo %>">
                  <button type="submit" class="btn btn-primary w-100 shadow-sm">Agregar al pedido</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Mensaje cuando no hay productos -->
    <div id="noProductMessage" class="text-center mt-4 d-none">
      <h3 class="text-muted">😿 Producto no encontrado.</h3>
    </div>
  </main>

  <!-- Scripts -->
  <script src="js/buscador.js"></script>
  <script src="js/Alert.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
