<a href="https://wa.me/573001234567" target="_blank" class="whatsapp-float">
  <i class="fab fa-whatsapp"></i>
</a>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  document.getElementById('categoriaSelect').addEventListener('change', function () {
    const secciones = document.querySelectorAll('.categoria-seccion');
    secciones.forEach(s => s.classList.add('d-none'));

    if (this.value === 'todos') secciones.forEach(s => s.classList.remove('d-none'));
    if (this.value === 'rinoneras') document.getElementById('rinonerasSection').classList.remove('d-none');
    if (this.value === 'bolsos') document.getElementById('bolsosSection').classList.remove('d-none');
    if (this.value === 'correas') document.getElementById('correasSection').classList.remove('d-none');
    if (this.value === 'billeteras') document.getElementById('billeterasSection').classList.remove('d-none');
    if (this.value === 'accesorios') document.getElementById('accesoriosSection').classList.remove('d-none');
    if (this.value === 'ropa') document.getElementById('ropaSection').classList.remove('d-none');
  });
</script>

